<UserControl x:Class="CRMFinalProject.ReminderUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CRMFinalProject"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="610">
    <Grid Width="610" Height="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="366*"/>
            <ColumnDefinition Width="152*"/>
            <ColumnDefinition Width="47*"/>
        </Grid.ColumnDefinitions>
        <Image Source="/Image/icons-reminder-5.png" Grid.Column="3" Margin="12,8,12,8"/>
        <Image Source="/Image/fibonacci-circles.png" Margin="10,8,10,8"/>
        <TextBlock x:Name="ReminderTitleTxt" Foreground="#000000" Grid.Column="2" Text="یادآور نمونه" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" FontFamily="W_yekan Bold" FontSize="16"/>
        <TextBlock x:Name="ReminderInfoTxt" Foreground="#000000" Grid.Column="1" Text="جزییات یادآور نمونه" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,0,0" FontFamily="W_yekan" FontSize="16"/>

    </Grid>
</UserControl>
